# Radarr MCP Server Configuration

# Required: Radarr instance URL (without trailing slash)
RADARR_URL=http://localhost:7878

# Required: Radarr API key from Settings -> General -> Security
RADARR_API_KEY=your-radarr-api-key-here

# MCP Server Configuration
# Host to bind the MCP server to (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
RADARR_MCP_HOST=0.0.0.0
# Port for the MCP server (used for both container internal and host port mapping)
# If you change this, you must rebuild the container
RADARR_MCP_PORT=4200

# Logging Configuration
LOG_LEVEL=INFO

# Optional: Custom service name for logging
RADARR_NAME=radarr 